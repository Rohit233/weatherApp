<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffff" />
            <stroke android:width="5dp" android:color="#ffffff" android:dashWidth="2dp" />
            <corners android:radius="25dp" />
        </shape>


    </item>

    <item android:layout_width="wrap_content" android:layout_height="match_parent" android:state_focused="true">
        <shape>
            <corners android:radius="25dp" />
            <stroke android:width="5dp" android:color="#808080"  />
            <solid android:color="#808080" />


        </shape>


    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp"/>
            <stroke android:width="2dp" android:color="#808080"/>
            <gradient android:angle="-90" android:startColor="#808080"/>



        </shape>


    </item>

</selector>